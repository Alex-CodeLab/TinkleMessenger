<GetNamesForFindFriendsScreen>:
    GridLayout:
        rows: 1
        BoxLayout:
            padding: [0,0,0,15] # w/out then floating will be down
            orientation: "vertical"
            ScrollView:
                do_scroll_x: False
                MDList:
                    id: ldml
            MDFloatingActionButton:
                icon: 'refresh'
                opposite_colors: True
                elevation_normal: 8
                pos_hint: {"x": 0.8, "y": 0.2}
                md_bg_color: app.theme_cls.primary_color
                on_release: root.refresh_screen()

<GetNamesForFriendRequestsScreen>:

    GridLayout:
        cols: 1
        rows: 3
        MDToolbar:
            id: toolbar
            title: "Friend Requests"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items:
                [['arrow-left', lambda x: root.on_back_pressed()]]

        ScrollView:
            do_scroll_x: False
            MDList:
                id: ldml

