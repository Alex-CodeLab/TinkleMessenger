<GetNamesForStatusScreen>:
    GridLayout:
        rows:2
        padding: [4, 2, 4, 0]
        MDToolbar:
            id: toolbar
            title: "Status"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]
            right_action_items: [['share', lambda x: root.create_new_post()]]
        GridLayout:
            cols: 1
            padding: [5, 0, 5, 0]
            spacing: 10

            ScrollView:
                do_scroll_x: False
                MDList:
                    id: ldml

