<CreateGroupScreen>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Create a group"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            rows: 2
            orientation: 'vertical'
            padding: [5,50,5,50]
            GridLayout:
                rows:3
                cols:1


                Widget:
                MDLabel:
                    text: "Create your group"
                    text_size: self.size
                    font_size: dp(50)
                    halign: "center"
                    font_name: "Cursive"
                Widget:
            GridLayout:
                rows:3
                cols:3
                orientation: "vertical"
                Widget:
                MDTextField:
                    hint_text: "Name"
                    max_text_length: 12
                    id: group_name
                    multiline: False
                    write_tab: False
                Widget:
                Widget:
                MDTextField:
                    hint_text: "Description"
                    helper_text: "give it a description"
                    helper_text_mode: "on_focus"
                    id: group_description
                    multiline: False
                    write_tab: False
                Widget:

                Widget:
                MDRaisedButton:
                    font_size: sp(20)
                    text:"Create"
                    on_release:
                        Clock.schedule_once(lambda dt: root.create_group(group_name.text, group_description.text), 0)
                        
                Widget: