<DisplayStatus>:
    GridLayout:
        rows: 2

        MDToolbar:
            id: toolbar
            title: "Status"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items:
                [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            rows: 2
            orientation: 'lr-tb'
            GridLayout:
                cols:1

                MyImageButton:
                    id: imga
                    source: root.img_src
                    halign: "center"
                    on_release:
                        root.show_img_pop(imga.source)
            BoxLayout:
                padding: [10,50,10,50] # w/out then floating will be down
                orientation: "vertical"
                MDLabel:
                    text: root.txt_stat
                    text_size: self.size
                    font_size: sp(17)
                    color: get_color_from_hex("#000000ff")
                    halign: "center"

                MDFloatingActionButton:
                    icon: 'download'
                    opposite_colors: True
                    elevation_normal: 8
                    pos_hint: {"x": 0.8, "y": 0.1}
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.save_status()