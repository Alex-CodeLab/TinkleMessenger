<SignInScreen>:
    web_api_key: "WEB API KEY"
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Sign in"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            right_action_items: [['dots-vertical', lambda x: root.show_bottom_sheet()]]

        GridLayout:
            rows: 2
            orientation: 'vertical'
            padding: [10,50,10,50]
            #spacing: 50
            BoxLayout:

                Image:
                    halign: "center"
                    source: "img/tinkle_logo.png"
            GridLayout:
#                rows:3
                cols:3
                orientation: "vertical"
                Widget:
                MDTextField:
                    id: email_input
                    hint_text: "Email"
                    multiline: False
                    write_tab: False
                Widget:
                Widget:
                MDTextField:
                    id: password_input
                    hint_text: "Password"
                    password: True
                Widget:
                Widget:

                Widget:
                MDRaisedButton:
                    id: proceed_button
                    text: "Sign in"
                    on_release:
                        root.sign_up(email_input.text, password_input.text) if decide_create_account.state == "down"\
                        else root.sign_in(email_input.text, password_input.text)
                GridLayout:
                    rows: 2
                    cols: 2
                    MDCheckbox:
                        id: decide_create_account
                        size_hint: None, None
                        size: dp(48), dp(48)
                        on_state:
                            root.change_title(self.state)
                    MDLabel:
                        text: "Create account?"