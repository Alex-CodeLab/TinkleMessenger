<GroupConversation>:
    GridLayout:
        rows: 3
        MDToolbar:
            id: toolbar
            title: app.grp_name
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items:
                [['home-group', lambda x: ""]]
            right_action_items:
                [['dots-vertical', lambda x: root.show_bottom_sheet()]]

        GridLayout:
            cols: 1
            rows: 1
            ScrollView:
                do_scroll_x: False
                MDList:
                    id: mld

        BoxLayout:
            size_hint_y: None
            height: 40
            padding: [7, 4, 7, 7]
            orientation: "vertical"

            MDTextField:
                id: message
                hint_text: "Type your message"
                multiline: False
                on_text_validate: root.send_msg()