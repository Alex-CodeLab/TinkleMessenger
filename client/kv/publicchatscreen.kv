<PublicChatScreen>:
    GridLayout:
        rows: 3
        padding: [4,0,4,0]
        spacing: 5

        MDToolbar:
            id: toolbar
            title: "Public chat"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items:
                [['arrow-left', lambda x: root.on_back_pressed()]]
            right_action_items:
                [['dots-vertical', lambda x: root.show_bottom_popup()]]

        ScrollView:
            do_scroll_x: False
            scroll_y:0
            MDList:
                id: ml
        BoxLayout:
            size_hint_y: None
            height: 40
            padding: [0, 0, 0, 7]
            orientation: "vertical"

            MyMDTextFieldRound:
                id: message
                hint_text: "Type your message"
                multiline: False
                icon_type: "right"
                icon_right: "send"
                icon_callback: root.send_msg